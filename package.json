{
  "name": "zlablibrary-v2",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^5",
    "express": "^4",
    "hdb": "^0.18.3",
    "passport": "0.5.2",
    "axios": "0.24.0"
  },
  "devDependencies": {
    "@sap/ux-specification": "^1.96.2",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "hana": "cds deploy --to hana:library-v2 --auto-undeploy",
    "start": "cds run",
    "build": "cds build",
    "undeploy": "cf undeploy zlablibrary-v2 --delete-services --delete-service-keys",
    "sandbox": "cds watch --profile sandbox"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  },
  "cds": {
    "requires": {
      "db": {
        "kind": "hana"
      },
      "CPIDestination": {
        "kind": "rest",
        "credentials": {
          "destination": "CPI_DESTINATION"
        }
      },
      "API_BUSINESS_PARTNER": {
        "kind": "odata-v2",
        "model": "srv/external/API_BUSINESS_PARTNER",
        "[sandbox]": {
            "credentials": {
                "headers": {
                    "APIKey": "HxUzqUmGi50rehaWlAqkRNC0muBCAyvO"
                },
                "url": "https://sandbox.api.sap.com/s4hanacloud/sap/opu/odata/sap/API_BUSINESS_PARTNER/"
            }
          }
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  },
  "sapux": [
    "app/zlabreader",
    "app/zlabauthor",
    "app/zlabbook",
    "app/zlabbooking"
  ]
}